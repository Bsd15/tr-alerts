{
	"name": "tr-alerts",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"private": false,
	"files": [
		"dist",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Bsd15/tr-alerts"
	},
	"version": "0.1.0",
	"dependencies": {},
	"scripts": {
		"build:css": "cross-env NODE_ENV=production postcss src/assets/styles/tailwind.css -o src/lib/TRAlert/index.css",
		"watch:css": "cross-env NODE_ENV=development postcss src/assets/styles/tailwind.css -o src/lib/TRAlert/index.css --watch",
		"react-scripts:start": "sleep 5 && react-scripts start",
		"react-scripts:build": "react-scripts build",
		"start": "run-p watch:css react-scripts:start",
		"build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.1",
		"postcss-preset-env": "^6.7.0",
		"prop-types": "^15.7.2",
		"purgecss": "^2.3.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "3.4.1",
		"tailwindcss": "^1.5.1"
	},
	"peerDependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	}
}
